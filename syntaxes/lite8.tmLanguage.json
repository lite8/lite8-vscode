{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lite8",
	"patterns": [
		{
			"include": "#scriptcode"
		},
		{
			"include": "#binhex"
		},
		{
			"include": "#luacode"
		},
		{
			"include": "#tilemap"
		},
		{
			"include": "#spritesheet"
		},
		{
			"include": "#sfx"
		},
		{
			"include": "#note"
		}
	],
	"repository": {
		"scriptcode": {
			"name": "meta.section.lite8.scriptcode",
			"begin": "__script__",
			"end": "(?=^__\\w+__)",
			"patterns": [
				{
					"include": "source.lua"
				},
				{
					"include": "#section"
				}
			]
		},
		"luacode": {
			"name": "meta.section.lk12.luacode",
			"begin": "___luacode___",
			"end": "___",
			"patterns": [
				{
					"include": "source.lua"
				},
				{
					"include": "#section"
				}
			]
		},
		"binhex" : {
			"name": "meta.section.lite8.binhex",
			"begin": "__(sprite|map|palette)__",
			"end": "(?=^__\\w+__)",
			"patterns": [
				{
					"include": "#hexadecimal"
				}
			]
		},
		"spritesheet": {
			"name": "meta.section.lk12.spritesheet",
			"begin": "spritesheet___",
			"end": "___",
			"patterns": [
				{
					"include": "#header"
				},
				{
					"include": "#hexadecimal"
				},
				{
					"include": "#section"
				}
			]
		},
		"sfx": {
			"name": "meta.section.lk12.sfx",
			"match": "sfx___",
			"patterns": [
				{
					"include": "#section"
				}
			]
		},
		"header": {
			"name": "entity.name.section.lk12",
			"match": "LK12;([A-Z]+);([0-9]+)x([0-9]+)",
			"captures": {
				"2": {
					"name": "constant.numbers.integer.lk12"
				},
				"3": {
					"name": "constant.numbers.lk12"
				}
			}
		},
		"element": {
			"name": "constant.numbers.integer.lk12",
			"match": "[0-9]+"
		},
		"hexadecimal": {
			"name": "constant.numeric.hexadecimal.lite8",
			"match": "[0-9A-Fa-f\\|]"
		},
		"note": {
			"name": "constant.other.sfx.lk12",
			"match": "[A-G] [0-9]+"
		},
		"section": {
			"name": "entity.name.section.lk12",
			"match": "[a-z]+___"
		}
	},
	"scopeName": "source.lite8"
}