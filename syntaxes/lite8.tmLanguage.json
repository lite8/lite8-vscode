{
	"scopeName": "source.lite8",
	"name": "Lite8",
	"patterns": [
		{ "include": "#embedded_pascal" },
		{ "include": "#embedded_lua" },
		{ "include": "#scriptcode" },
		{
			"include": "#binhex"
		},
		{
			"include": "#luacode"
		},
		{
			"include": "#tilemap"
		},
		{
			"include": "#spritesheet"
		},
		{
			"include": "#sfx"
		},
		{
			"include": "#note"
		}
	],
	"repository": {
		"scriptcode": {
			"name": "meta.section.lite8.scriptcode",
			"begin": "^__script__",
			"end": "(?=^__\\w+__)",
			"patterns": [
				{ "include": "#embedded_pascal" },
				{ "include": "#embedded_lua" },
				{ "include": "#embedded_javascript" }
			]
		},
		"embedded_pascal": {
			"name": "meta.embedded.block.pascal",
			"begin": "^\\.pas(cal)*|^__script__\\s*\\^.pas(cal)*",
			"end": "(?=^__\\w+__)",
			"patterns": [
				{
					"include": "source.pascal"
				}
			]
			
		},
		"embedded_lua": {
			"name": "meta.embedded.block.lua",
			"begin": "^\\.lua|^__script__\\s*\\.lua",
			"end": "(?=^__\\w+__)",
			"patterns": [
				{
					"include": "source.lua"
				}
			]
			
		},
		"embedded_javascript": {
			"name": "meta.embedded.block.javascript",
			"begin": "^\\.js|^\\.javascript",
			"end": "(?=^__\\w+__)",
			"patterns": [
				{
					"include": "source.js"
				}
			]
			
		},
		"scriptcode000": {
			"name": "meta.section.lite8.scriptcode",
			"begin": "__script__",
			"end": "(?=^__\\w+__)",
			"patterns": [
				{
					"include": "source.lua"
				},
				{
					"include": "#section"
				}
			]
		},
		"luacode": {
			"name": "meta.section.lite8.luacode",
			"begin": "___luacode___",
			"end": "___",
			"patterns": [
				{
					"include": "source.lua"
				},
				{
					"include": "#section"
				}
			]
		},
		"binhex" : {
			"name": "meta.section.lite8.binhex",
			"begin": "__(sprite|map|palette)__",
			"end": "(?=^__\\w+__)",
			"patterns": [
				{
					"include": "#hexadecimal"
				}
			]
		},
		"spritesheet": {
			"name": "meta.section.lite8.spritesheet",
			"begin": "spritesheet___",
			"end": "___",
			"patterns": [
				{
					"include": "#header"
				},
				{
					"include": "#hexadecimal"
				},
				{
					"include": "#section"
				}
			]
		},
		"sfx": {
			"name": "meta.section.lite8.sfx",
			"match": "sfx___",
			"patterns": [
				{
					"include": "#section"
				}
			]
		},
		"header": {
			"name": "entity.name.section.lite8",
			"match": "LK12;([A-Z]+);([0-9]+)x([0-9]+)",
			"captures": {
				"2": {
					"name": "constant.numbers.integer.lite8"
				},
				"3": {
					"name": "constant.numbers.lite8"
				}
			}
		},
		"element": {
			"name": "constant.numbers.integer.lite8",
			"match": "[0-9]+"
		},
		"hexadecimal": {
			"name": "constant.numeric.hexadecimal.lite8",
			"match": "[0-9A-Fa-f\\|]"
		},
		"note": {
			"name": "constant.other.sfx.lite8",
			"match": "[A-G] [0-9]+"
		},
		"section": {
			"name": "entity.name.section.lite8",
			"match": "[a-z]+___"
		}
	}
}